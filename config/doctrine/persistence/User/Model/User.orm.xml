<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                         http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <entity name="Eventscase\MovieRental\Domain\User\Model\User" table="users">
        <id name="id" type="uuid_binary_ordered_time" />

        <field name="name"  />
        <field name="surnames" />
        <field name="dni" />
        <field name="phone" />
        <field name="email" unique="true" />
        <field name="password"  />
        <field name="loginToken" />
        <field name="roles" type="array"  />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />
        <field name="deletedAt" type="datetime" nullable="true" />
        <embedded name="address" class="Eventscase\MovieRental\Domain\Shared\ValueObject\Address" use-column-prefix="false" />

        <gedmo:soft-deleteable field-name="deletedAt" />

        <one-to-many field="orders" target-entity="Eventscase\MovieRental\Domain\Order\Model\Order" mapped-by="user" />

    </entity>
</doctrine-mapping>