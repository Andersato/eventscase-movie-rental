<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                         http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <entity name="Eventscase\MovieRental\Domain\Order\Model\Order" table="orders">
        <id name="id" type="orderId" />

        <field name="orderId" type="integer" column-definition="INT AUTO_INCREMENT UNIQUE" />
        <field name="endDate" type="datetime" nullable="true" />
        <field name="status" />
        <field name="price" type="float">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="createdAt" type="datetime_immutable" />
        <field name="updatedAt" type="datetime_immutable" />
        <field name="deletedAt" type="datetime_immutable" nullable="true" />
        <embedded name="address" class="Eventscase\MovieRental\Domain\Shared\ValueObject\Address" use-column-prefix="false" />

        <gedmo:soft-deleteable field-name="deletedAt" />

        <one-to-many field="orderLines" target-entity="Eventscase\MovieRental\Domain\Order\Model\OrderLine" mapped-by="order">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-one field="user" target-entity="Eventscase\MovieRental\Domain\User\Model\User" inversed-by="orders">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>