<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                         http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Eventscase\MovieRental\Domain\Order\Model\OrderLine" table="order_lines">
        <id name="id" type="orderLineId" />

        <field name="price" type="float">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="quantity" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <many-to-one field="order" target-entity="Eventscase\MovieRental\Domain\Order\Model\Order" inversed-by="orderLines">
            <cascade>
                <cascade-persist />
            </cascade>
            <join-column name="order_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="movie" target-entity="Eventscase\MovieRental\Domain\Movie\Model\Movie" inversed-by="orderLines">
            <join-column name="movie_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>