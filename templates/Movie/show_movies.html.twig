{% extends 'base.html.twig' %}

{% set tab = 'show_movies' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Películas</h1>

            <div class="row">
                <div class="col-md-12">
                    <a href="{{ path('create_movie_admin') }}" class="btn btn-success" style="margin-bottom: 10px">Añadir película</a>
                </div>
            </div>

            {% if 0 < pager.total %}
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Título</th>
                            <th scope="col">Año</th>
                            <th scope="col">Duración (min)</th>
                            <th scope="col">Precio</th>
                            <th scope="col" colspan="2">Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for movie in pager.items %}
                            <tr>
                                <td>{{ movie.title }}</td>
                                <td>{{ movie.year }}</td>
                                <td>{{ movie.duration }}</td>
                                <td>{{ movie.price }}</td>
                                <td colspan="2">{{ movie.description }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}