{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6">
            <h1>Películas</h1>

            {% if 0 < pager.total %}
                <form name="movies" method="post">
                    {# Crear función en twig para reutlizar esto #}
                    {% if app.user and is_granted('ROLE_USER') %}
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success" style="margin-bottom: 10px">Alquilar</button>
                            </div>
                        </div>
                    {% endif %}

                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Título</th>
                                <th scope="col">Año</th>
                                <th scope="col">Duración (min)</th>
                                <th scope="col">Precio</th>
                                <th scope="col" colspan="2">Descripción</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for movie in pager.items %}
                                <tr>
                                    <td>{{ movie.title }}</td>
                                    <td>{{ movie.year }}</td>
                                    <td>{{ movie.duration }}</td>
                                    <td>{{ movie.price }}</td>
                                    <td colspan="2">{{ movie.description }}</td>
                                    <td>
                                        {% if app.user and is_granted('ROLE_USER') %}
                                            <input class="form-control" type="number" min="0" value="0" name="quantities[]" style="width: 80px">
                                            <input type="hidden" value="{{ movie.id }}" name="ids[]">
                                            <input type="hidden" value="{{ movie.price }}" name="prices[]">
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    {% if app.user and is_granted('ROLE_USER') %}
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success">Alquilar</button>
                            </div>
                        </div>
                    {% endif %}
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}